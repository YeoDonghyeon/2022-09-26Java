package inheritance;

public class Test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ItwillBank ib = new ItwillBank();
		
		ib.accountNo = "111-1111-111";
		ib.ownerName = "홍길동";
		ib.balance = 10000;
		
		ib.deposit(5000);
		
		
	}

}

class Account {
	String accountNo;
	String ownerName;
	int balance;

	public void deposit(int amount) {
		balance += + amount;
		System.out.println(amount + "원이 입금되었습니다.");
		showAccountInfo();
	}
	
	public int withdraw(int amount) {
		if(balance < amount) {
			System.out.println("잔고가 부족하여 출금이 불가능합니다.");
			System.out.println(amount + "원이 출금되었습니다. 현재잔고 : " + balance + "원");
			amount = 0;
		} else {
			balance -= amount;
			System.out.println(amount + "원이 출금되었습니다.");
			System.out.println("현재 잔고는 : " + balance + "원 입니다.");
		}
		return amount;
	}
	
	public void showAccountInfo() {
		System.out.println("계좌번호 : " + accountNo);
		System.out.println("예금주명 : " + ownerName);
		System.out.println("현재잔액 : " + balance);
	}
}

class ItwillBank extends Account {
	String insureName;

	public void contract(String insureName) {
		this.insureName = insureName;
		System.out.println(insureName + "보험 계약 완료!");
	}
	
}