class Account {
	String accountNo;
	String ownerName;
	int balance;

	
	
	public Account(String accountNo, String ownerName, int balance) {
		this.accountNo = accountNo;
		this.ownerName = ownerName;
		this.balance = balance;
	}

	public void deposit(int amount) {
		balance += + amount;
		System.out.println(amount + "원이 입금되었습니다.");
		showAccountInfo();
	}
	
	public int withdraw(int amount) {
		balance -= amount;
		System.out.println(amount + "원이 출금되었습니다.");
		return amount;
	}
	
	public void showAccountInfo() {
		System.out.println("계좌번호 : " + accountNo);
		System.out.println("예금주명 : " + ownerName);
		System.out.println("현재잔액 : " + balance);
	}
}

class ItwillBank extends Account {
	String insureName;
	
	
	
	public ItwillBank(String accountNo, String ownerName, int balance, String insureName) {
		super(accountNo, ownerName, balance);
		this.insureName = insureName;
	}



//	public ItwillBank(String insureName) {
//		this.insureName = insureName;
//	}


	public void contract(String insureName) {
		System.out.println(insureName + "보험 계약 완료!");
	}
	
}